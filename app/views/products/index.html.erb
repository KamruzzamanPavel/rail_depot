<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <div class="p-4 mb-6 bg-green-100 border border-green-400 text-green-700 rounded-lg transition-opacity duration-500" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Products</h1>
    <%= link_to 'New product', 
                new_product_path, 
                class: "rounded-lg py-2 px-4 bg-green-600 text-white font-medium hover:bg-green-700 transition-colors" %>
  </div>

  <div class="overflow-x-auto bg-white rounded-lg shadow">
    <table class="min-w-full divide-y divide-gray-200">
      <tbody class="bg-white divide-y divide-gray-200">
        <% @products.each do |product| %>
          <tr class="<%= cycle('bg-gray-50', 'bg-white') %> hover:bg-gray-100 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <% if product.image_url.present? %>
                  <%= image_tag(product.image_url, class: 'h-24 w-24 object-cover rounded-md') %>
                <% else %>
                  <div class="h-24 w-24 bg-gray-200 rounded-md flex items-center justify-center text-gray-500">
                    No Image
                  </div>
                <% end %>
              </div>
            </td>

            <td class="px-6 py-4">
              <div class="text-lg font-medium text-gray-900"><%= product.title %></div>
              <div class="text-gray-500 mt-1">
                <%= truncate(strip_tags(product.description), length: 120) %>
              </div>
            </td>

            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="space-y-2">
                <%= link_to 'Show', product, class: 'text-blue-600 hover:text-blue-900 block' %>
                <%= link_to 'Edit', edit_product_path(product), class: 'text-indigo-600 hover:text-indigo-900 block' %>
                <%= link_to 'Delete', 
                            product, 
                            method: :delete, 
                            data: { confirm: 'Are you sure?' },
                            class: 'text-red-600 hover:text-red-900 block' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>